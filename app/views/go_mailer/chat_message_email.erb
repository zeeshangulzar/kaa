<table cellspacing="0" cellpadding="0">
  <tr>
    <td style="background-color:#f1f7f7" colspan="2">
      <div style="margin:16px">
        <p>
          <%= @user.profile.full_name %>,
        </p>
        <p>
          You've received a new message on <%= Constant::AppName %> from <%= @chat_message.user.profile.full_name %> @ <%= @chat_message.created_at.to_s %>:
        </p>
        <p>
          "<%= @chat_message.message %>"
          <% if @chat_message.photo %>
          <br/>
          <br/>
          <img src="<%= @chat_message.photo.url %>" alt="<%= @chat_message.message %>" style="max-width:600px;max-height:600px;" />
          <% end %>
        </p>
        <p>
          Click <a href="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/#/messages">here</a> to respond.
        </p>
        <p>
          <a href="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>">http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %></a>
        </p>
      </div>
    </td>
  </tr>
</table>

<table cellspacing="0" cellpadding="0">
  <tr>
    <td colspan="2" style="text-align:center" align="center">
      <img src="<%= @tip.email_image.url %>" style="width:100%;max-height:500px"/>
    </td>
  </tr>
  <tr>
    <td align="left" valign="top">
      <div style="margin:10px 0px 5px;font-family:Open Sans, Helvetica, Arial;">
        <span style="color:#b5364b;font-weight:normal;font-size:14px;text-transform:uppercase"><%= raw Markdown.new(@tip.email_image_caption).to_html %></span>
      </div>
    </td>
    <td align="right" valign="top">
      <p style="margin:10px 0px 5px;color:#aaa;font-family:Open Sans, Helvetica, Arial;">
        <%= raw @promotion.current_date.strftime("%A, %B %-d").gsub(/ /, '&nbsp;')  %>
      </p>
    </td>
  </tr>
  <tr>
    <td style="" colspan="2">
      <div style="margin:10px 0px">
        <img width="100px" height="100px" src="<%= @recipe.image_url %>" style="display:block;float:left;width:100px;height:100px;" alt="<%= @recipe.title %>">
        <div style="float:left;margin-left:20px;width:75%;font-family:Open Sans, Helvetica, Arial;">
          <span style="color:#777;font-size:14px;font-weight:bold;">RECIPE OF THE DAY:</span><br/>
          <span style="color:#1c7c88;font-weight:bold;font-size:16px;"><%= @recipe.title %></span>
          <p style="color:#acaba6; font-family:Open Sans, Helvetica, Arial;"><%= raw @recipe.description %> <a style="color:#b5364b" href="https://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/#/recipe/<%= @recipe.id %>">MORE...</a></p>
        </div>
      </div>
    </td>
  </tr>
  <tr>
    <td style="" colspan="2">
      <div style="margin:10px 0px">
        <img width="100px" height="100px" src="<%= @tip.full_image.url %>" style="display:block;float:left;width:100px;height:100px;" alt="<%= @tip.title %>">
        <div style="float:left;margin-left:20px;width:75%;font-family:Open Sans, Helvetica, Arial;">
          <span style="color:#777;font-size:14px;font-weight:bold;">DAILY TIP:</span><br/>
          <span style="color:#1c7c88;font-weight:bold;font-size:16px;"><%= @tip.title %></span>
          <p style="color:#acaba6; font-family:Open Sans, Helvetica, Arial;"><%= raw strip_tags(@tip.summary_html) %> <a style="color:#b5364b" href="https://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/#/tip/<%= @tip.id %>">MORE...</a></p>
        </div>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div style="margin:16px;font-family:Open Sans, Helvetica, Arial;font-size:14px">
        <a href="https://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>" style="display:block;float:left;color:#acaba6;"><em><%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %></em></a>
      </div>
    </td>
    <td style="text-align:right;" align="right">
      <div style="margin:16px;float:right;font-family:Open Sans, Helvetica, Arial;">
        <a href="https://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>"><img src="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/images/email/log_progress.png" alt="Log Progress" /></a>
      </div>
    </td>
  </tr>
</table>

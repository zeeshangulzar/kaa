<table cellspacing="0" cellpadding="0">
  <tr>
    <td align="left">
      <h1 style="font-family:Open Sans, Helvetica, Arial;color:#b5364b;margin:17px;font-weight:bold;font-size:14px;">Greetings from <%= Constant::AppName %>!</h1>
    </td>
    <td align="right">
      <p style="margin:18px;color:#aaa;font-family:Open Sans, Helvetica, Arial;font-size:12px;">
        <%= @user.promotion.current_date.strftime("%A, %B %-d") %>
      </p>
    </td>
  </tr>
  <tr>
    <td style="background-color:#fff;border-top:1px solid #f2f2f2" colspan="2">
      <div style="margin:18px;color:#303030;font-size:12px;font-family:Open Sans, Helvetica, Arial;">
        <p><%= @inviter.profile.full_name %> has invited you to join their team, "<%= @team.name %>" on  <%= Constant::AppName %>. Click <a style="color:#006ba6" href="https://<%= DomainConfig::DomainNames.first %>/#/register">here</a> to join now and accept their invitation.</p>
        <% if @message %>
        <p><strong>"<%= @message %>"</strong></p>
        <% end %>
        <p><strong>What is <%= Constant::AppName %>?</strong></p>
        <%= raw CustomContent::get('content_html', {:category => 'welcome', :key => 'what'}, @promotion) %>
      </div>
    </td>
  </tr>
</table>

<table cellspacing="0" cellpadding="0">
  <tr>
    <td style="background-color:#fff;border-top:1px solid #f2f2f2" colspan="2">
      <div style="margin:18px;color:#303030;font-size:12px;font-family:Open Sans, Helvetica, Arial;">
        <p><%= @user.profile.full_name %>,</p>
        <p><%= @event.user.profile.full_name %> has invited you to...</p>
        <table cellspacing="0" cellpadding="0" style="width:100%">
          <tr>
            <td colspan="2">
              <h3 style="margin:0;padding:0;line-height:1em;text-align:center;font-size:18px;color:#56a748;"><%= @event.name %></h3>
              <%
              event_start = Time.at(@event.start)
              event_end = Time.at(@event.end)
              start_formatted = event_start.strftime("%A, %B #{event_start.day.ordinalize}, %l:%M %p")
              end_formatted = (event_start.day != event_end.day) && (event_end.hour > 4) ? event_end.strftime("%A, %B #{event_start.day.ordinalize}, %l:%M %p") : event_end.strftime("%l:%M %p")
              %>
              <p style="text-align: center"><span style="font-size:10px"><em><%= start_formatted %> - <%= end_formatted %></em></span></p>
            </td>
          </tr>
          <tr>
            <td colspan="2" style="text-align:center">
              <img src="<%= @event.photo.file.nil? ? "https://#{@event.user.promotion.subdomain}.#{DomainConfig::DomainNames.first.to_s + @event.photo.url.to_s}" : @event.photo.url %>" alt="<%= @event.name %>" />
            </td>
          </tr>
          <tr>
            <td>
              <strong>Where?</strong>
            </td>
            <td>
              <%= @event.place %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>What?</strong>
            </td>
            <td>
              <%= @event.description %>
            </td>
          </tr>
        </table>
        Click <a href="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/#/events/<%= @event.id %>" style="color:#006ba6">here</a> to respond.
        <p><a href="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>" style="color:#006ba6">http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %></a></p>
      </div>
    </td>
  </tr>
</table>
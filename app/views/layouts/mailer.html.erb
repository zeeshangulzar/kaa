<table width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <td style="background-color:#FFFFFF" align="center">
      <table style="width:100%; max-width:630px; padding:16px;" cellspacing="0" cellpadding="0">
        <tr>
          <td style="text-align:left">
            <img src="<%= request.scheme + '://' + request.host_with_port + "/images/" + (@promotion.theme ||= 'default') + "/app-logo-blue.png?" + Time.now.to_i.to_s %>" />
          </td>
          <td style="text-align:right">
            <img src="<%= @promotion.logo.url + '?' + Time.now.to_i.to_s %>" />
          </td>
        </tr>
      </table>
    </td>

  </tr>
  <tr>
    <td style="background-color:#40b5af" align="center">
      <table style="width:100%; max-width:630px; padding:16px;" cellspacing="0" cellpadding="0">
        <tr>
          <td colspan="2">
            <table style="display:block;background-color:#FFF;box-shadow:0px 5px 5px #666;margin-bottom:10px" cellspacing="0" cellpadding="0">
              <tbody style="width:100%;display:block;">
                <tr style="width:100%;display:block;">
                  <td style="text-align:left;width:100%;display:block;">
                    <%= yield %>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr>
          <td align="left">
            <a href="/emails/unsubscribe" style="color:#FFFFFF">Unsubscribe</a>
          </td>
          <td align="right" style="color:#FFFFFF">
            &copy; <%= Date.today.year %> Health Enhancement Systems
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table width="100%" cellspacing="0" cellpadding="0" style="font-family:Open Sans, Helvetica, Arial;">
  <tr>
    <td style="background-color:#FFFFFF" align="center">
      <table style="width:100%; width:630px; padding:16px;" cellspacing="0" cellpadding="0">
        <tr>
          <td style="text-align:left">
            <img src="http://<%= DomainConfig::DomainNames.first + "/images/" + (@user.promotion.theme ||= 'default') + "/app-logo.png?" + Time.now.to_i.to_s %>" style="width:175px; max-width:80%" />
          </td>
          <td style="text-align:right">
            <img src="<%= @user.promotion.logo.url + '?' + Time.now.to_i.to_s %>" style="width:203px; max-width:90%" />
          </td>
        </tr>
      </table>
    </td>

  </tr>
  <tr>
    <td style="background-color:#006BA6" align="center">
      <table style="width:100%; width:630px; padding:16px;" cellspacing="0" cellpadding="0">
        <tr>
          <td colspan="2">
            <table style="display:block;background-color:#FFF;box-shadow:0px 5px 5px #666;margin-bottom:10px" cellspacing="0" cellpadding="0">
              <tbody style="width:100%;display:block;">
                <tr style="width:100%;display:block;">
                  <td style="text-align:left;width:100%;display:block;">
                    <%= yield %>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr>
          <td align="left">
            <!--<a href="http://<%= @user.promotion.subdomain + '.' + DomainConfig::DomainNames.first %>/emails/unsubscribe" style="color:#FFFFFF;font-family:Open Sans, Helvetica, Arial;">Unsubscribe</a>-->
          </td>
          <td align="right" style="color:#FFFFFF;font-family:Open Sans, Helvetica, Arial;">
            &copy; <%= Date.today.year %> Health Enhancement Systems
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
